# AI Research Assistant - Environment Configuration

# Application Settings
APP_NAME=AI Research Assistant
APP_VERSION=1.0.0
DEBUG_MODE=False

# Model Settings
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
DEFAULT_QA_MODEL=deepset/roberta-base-squad2
MODEL_CACHE_DIR=./models
DEVICE=auto

# File Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,txt,tex
TEMP_DIR=./data/temp
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Database Settings
VECTOR_DB_PATH=./data/vectorstore
METADATA_DB_PATH=./data/papers.db
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600

# API Settings
API_HOST=localhost
API_PORT=8000
WEB_PORT=8501
CORS_ORIGINS=*

# Performance Settings
MAX_CONCURRENT_UPLOADS=5
QA_HISTORY_LIMIT=50
MEMORY_OPTIMIZATION_INTERVAL=300

# Security (for production)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
ENABLE_FILE_LOGGING=True
